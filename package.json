{
  "name": "gestion-documental",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start-react": "cross-env BROWSER=none react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "electron main.js",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && cross-env DEBUG= npm run start-electron\"",
    "build": "npm run build-react && cpx main.js build && electron-builder",
    "postbuild": "echo 'Build finalizado exitosamente.'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "cross-env": "^10.1.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tuempresa.gestiondocumental",
    "productName": "Gestion Documental",
    "extraMetadata": {
      "main": "main.js"
    },
    "files": [
      "main.js",
      "build/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

